<article class="card lifehack-card m-2">
  <img src="{{imageUrl}}" alt="" class="card-img-top" />
  <div class="card-body">
    <h3 class="card-title">{{title}}</h3>
    <p class="card-text">{{description}}</p>
    <div class="d-flex justify-content-between">
      <div>
        <span class="badge text-bg-info">Likes: 5</span>
        <span class="badge text-bg-secondary">Rating: 8</span>
        {{!-- Comments button --}}
        <span class="badge text-bg-success comment" style="cursor: pointer;" data-toggle="tooltop"
          data-placement="bottom" title="View Comments">View {{comments.length}} Comments</span>
      </div>
      {{!-- Delete button --}}
      <span style="cursor: pointer;" data-toggle="tooltop" data-placement="bottom" title="Delete Life Hack">
        <svg class="dashboard-delete-lifehack" xmlns="http://www.w3.org/2000/svg" data-delete="{{_id}}"
          width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
          <path
            d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
          <path fill-rule="evenodd"
            d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
        </svg>
      </span>

    </div>
  </div>
  <div class="d-none">
    <ul class="p-0">
      {{#each comments as |comment|}}
      <li style="list-style: none;" class="bg-info m-2 p-2">
        <small>{{comment.userName}}</small> - <small>{{format_date comment.createdAt}}</small>
        <br>
        <small class="text-muted">{{comment.text}}</small>
        {{/each}}
      </li>
    </ul>
  </div>
</article>